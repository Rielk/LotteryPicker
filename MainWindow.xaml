<Window x:Class="LotteryPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LotteryPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <StackPanel>
        <Grid Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" TextWrapping="NoWrap" Text="{Binding Number1, TargetNullValue=X}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10"/>
            <TextBlock Grid.Column="1" TextWrapping="NoWrap" Text="{Binding Number2, TargetNullValue=X}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10"/>
            <TextBlock Grid.Column="2" TextWrapping="NoWrap" Text="{Binding Number3, TargetNullValue=X}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10"/>
            <TextBlock Grid.Column="3" TextWrapping="NoWrap" Text="{Binding Number4, TargetNullValue=X}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10"/>
            <TextBlock Grid.Column="4" TextWrapping="NoWrap" Text="{Binding Number5, TargetNullValue=X}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10"/>
        </Grid>
        <Button Content="Roll" Margin="10,10,10,10" Click="Button_Click"/>

    </StackPanel>
</Window>
